{% extends 'base.html.twig' %}

{% block body %}

	<h2 class="fr-mt-4w">Ajouter un véhicule</h2>

	{{ form_start(form) }}

	<div class="fr-input-group">
		{{ form_label(form.immatriculation) }}
		<span class="fr-hint-text">Champ obligatoire (9 caractères maximum).</span>
	</label>
	{{ form_widget(form.immatriculation) }}
</div>

	<div class="fr-input-group">
		{{ form_label(form.marque) }}
		<span class="fr-hint-text">Champ obligatoire (255 caractères maximum).</span>
	</label>
	{{ form_widget(form.marque) }}
</div>

<div class="fr-input-group">
		{{ form_label(form.modele) }}
		<span class="fr-hint-text">Champ obligatoire (255 caractères maximum).</span>
	</label>
	{{ form_widget(form.modele) }}
</div>

<div class="fr-input-group">
		{{ form_label(form.motorisation) }}
		<span class="fr-hint-text">Facultatif.</span>
	</label>
	{{ form_widget(form.motorisation) }}
</div>

<div class="fr-input-group">
		{{ form_label(form.finition) }}
		<span class="fr-hint-text">Facultatif.</span>
	</label>
	{{ form_widget(form.finition) }}
</div>

<div class="fr-input-group">
		{{ form_label(form.NbPlaces) }}
		<span class="fr-hint-text">Facultatif.</span>
	</label>
	{{ form_widget(form.NbPlaces) }}
</div>

<fieldset class="fr-fieldset" id="checkboxes-inline" aria-labelledby="checkboxes-inline-legend checkboxes-inline-messages">
    <legend class="fr-fieldset__legend--regular fr-fieldset__legend" id="checkboxes-inline-legend">
        Véhicule sérigraphié
    </legend>
    <div class="fr-fieldset__element fr-fieldset__element--inline">
        <div class="fr-checkbox-group">
					{{ form_widget(form.serigraphie) }}
					{{ form_label(form.serigraphie) }}
            <div class="fr-messages-group" id="checkboxes-inline-1-messages" aria-live="assertive">
            </div>
        </div>
    </div>
    
    <div class="fr-messages-group" id="checkboxes-inline-messages" aria-live="assertive">
    </div>
</fieldset>

<div class="fr-select-group">
{{ form_label(form.genre)}}
 {{form_widget(form.genre)}}
 </div>

 <div class="fr-select-group">
{{ form_label(form.categorie)}}
 {{form_widget(form.categorie)}}
 </div>

 <div class="fr-select-group">
{{ form_label(form.transmission)}}
 {{form_widget(form.transmission)}}
 </div>

 <div class="fr-select-group">
{{ form_label(form.carburant)}}
 {{form_widget(form.carburant)}}
 </div>

{{ form_rest(form) }}

<ul class="fr-mt-4w fr-btns-group fr-btns-group--inline-md">
   
    <li>
        <button type="reset" class="fr-btn fr-btn--secondary">
            Réinitialiser le formulaire
        </button>
    </li>

		 <li>
        <button type="submit" class="fr-btn">
            Ajouter le véhicule
        </button>
    </li>

</ul>

{{ form_end(form) }}{% endblock %}
