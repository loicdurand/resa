{% set time = "now"| date('Y-m-d') %}
{% set curr_day = time | date('d') %}
{% set prev_monday = "now"| date_modify('previous monday')| date('Y-m-d') %}
{% set next_sunday = "now"| date_modify('next sunday')| date('Y-m-d') %}
{% set debut_mois = curr_day > 15 ? time|date('Y-m-d') : time|date('Y-m-01') %}
{% set plus1month = curr_day > 15 ? "now" | date_modify('last day of next month') | date('Y-m-d') : "now"| date('Y-m-t') %}
{% set plus3months = "now"| date_modify('+3 months')| date('Y-m-d') %}

<nav	class="fr-summary"	role="navigation"	aria-labelledby="fr-go_to_tdb-title">
	<h2	class="fr-summary__title"	id="fr-go_to_tdb-title">
